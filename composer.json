{
    "name": "gulch/minify",
    "description": "Package for minify and optimize HTML code",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "minify",
        "html",
        "html5",
        "pagespeed",
        "optimization",
        "wpo",
        "webperf",
        "performance",
        "script",
        "javascript",
        "css",
        "stylesheets",
        "php"
    ],
    "authors": [
        {
            "name": "Volodymyr Gulchuk",
            "email": "volodymyr@gulchuk.com",
            "homepage": "https://gulchuk.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.3",
        "phpunit/php-code-coverage": "^5.2",
        "satooshi/php-coveralls": "^2.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "gulch\\Minify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "gulch\\Minify\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "ci": [
            "@phpcs",
            "@test"
        ],
        "test": "phpunit",
        "phpcs": "phpcs -n --standard=PSR2 src && phpcs -n --standard=PSR2 tests"
    }
}